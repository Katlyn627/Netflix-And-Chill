# ========================================
# Netflix and Chill - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual API keys and credentials
# Get your API keys from the respective service providers listed below

# ========================================
# Server Configuration
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# Database Configuration
# ========================================
# Choose your database type: 'file' (default), 'mongodb', or 'postgresql'
DB_TYPE=file

# MongoDB Configuration (if using MongoDB)
# Get MongoDB Atlas connection string at: https://www.mongodb.com/atlas
# Format: mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/DATABASE_NAME?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/netflix-and-chill?retryWrites=true&w=majority&appName=Cluster0

# PostgreSQL Configuration (if using PostgreSQL)
# Get PostgreSQL from: Heroku, Supabase, or your own instance
# Format: postgres://USERNAME:PASSWORD@HOST:PORT/DATABASE
POSTGRES_URI=postgres://YOUR_USERNAME:YOUR_PASSWORD@YOUR_HOST:5432/netflix_and_chill

# ========================================
# RapidAPI Configuration
# ========================================
# RapidAPI marketplace integration for API key authorization
# Get your API key at: https://rapidapi.com/
# Two modes available:
# 1. SERVER MODE: When publishing your API on RapidAPI marketplace
# 2. CLIENT MODE: When consuming external APIs from RapidAPI

# Server Mode - Protect your API endpoints with RapidAPI key validation
# Enable RapidAPI authentication (set to 'true' to enable)
# Default is 'false' for local development
RAPIDAPI_ENABLED=false

# Comma-separated list of valid RapidAPI keys that can access your API
# Example: key1,key2,key3
RAPIDAPI_API_KEYS=YOUR_RAPIDAPI_KEY_1,YOUR_RAPIDAPI_KEY_2

# Optional: Validate X-RapidAPI-Host header (set to 'true' to enable)
RAPIDAPI_VALIDATE_HOST=true

# Expected host value when validation is enabled
# Update this to your actual RapidAPI host when publishing
RAPIDAPI_EXPECTED_HOST=netflix-and-chill.p.rapidapi.com

# Client Mode - Call external RapidAPI marketplace APIs
# Your RapidAPI key for making requests to external APIs
RAPIDAPI_CLIENT_KEY=YOUR_RAPIDAPI_CLIENT_KEY_HERE

# Host of the external API you're calling (varies by API)
# Example: movie-database-alternative.p.rapidapi.com
RAPIDAPI_CLIENT_HOST=YOUR_RAPIDAPI_CLIENT_HOST_HERE

# ========================================
# Streaming Platform OAuth Configuration
# ========================================
# Connect with streaming platforms to sync watch history and viewing preferences
# Note: Most streaming platforms have restricted API access
# You must apply for developer access from each platform

# Base URL for OAuth callbacks
# IMPORTANT: In production (Heroku, etc.), use HTTPS to prevent SSL errors with Auth0
# Development: http://localhost:3000
# Production: https://your-app-name.herokuapp.com (or your domain)
# The application will automatically use HTTPS in production if NODE_ENV=production
BASE_URL=http://localhost:3000

# Netflix OAuth
NETFLIX_OAUTH_ENABLED=true
NETFLIX_CLIENT_ID=YOUR_NETFLIX_CLIENT_ID
NETFLIX_CLIENT_SECRET=YOUR_NETFLIX_CLIENT_SECRET
NETFLIX_REDIRECT_URI=http://localhost:3000/api/auth/netflix/callback

# Hulu OAuth
HULU_OAUTH_ENABLED=true
HULU_CLIENT_ID=YOUR_HULU_CLIENT_ID
HULU_CLIENT_SECRET=YOUR_HULU_CLIENT_SECRET
HULU_REDIRECT_URI=http://localhost:3000/api/auth/hulu/callback

# Disney+ OAuth
DISNEY_OAUTH_ENABLED=true
DISNEY_CLIENT_ID=YOUR_DISNEY_CLIENT_ID
DISNEY_CLIENT_SECRET=YOUR_DISNEY_CLIENT_SECRET
DISNEY_REDIRECT_URI=http://localhost:3000/api/auth/disney/callback

# Amazon Prime Video OAuth
PRIME_OAUTH_ENABLED=true
PRIME_CLIENT_ID=YOUR_PRIME_CLIENT_ID
PRIME_CLIENT_SECRET=YOUR_PRIME_CLIENT_SECRET
PRIME_REDIRECT_URI=http://localhost:3000/api/auth/prime/callback

# HBO Max OAuth
HBO_OAUTH_ENABLED=true
HBO_CLIENT_ID=YOUR_HBO_CLIENT_ID
HBO_CLIENT_SECRET=YOUR_HBO_CLIENT_SECRET
HBO_REDIRECT_URI=http://localhost:3000/api/auth/hbo/callback

# Apple TV+ OAuth (uses Apple ID)
APPLETV_OAUTH_ENABLED=true
APPLETV_CLIENT_ID=YOUR_APPLETV_CLIENT_ID
APPLETV_CLIENT_SECRET=YOUR_APPLETV_CLIENT_SECRET
APPLETV_REDIRECT_URI=http://localhost:3000/api/auth/appletv/callback

# ========================================
# Movie Data API - TMDB (The Movie Database)
# ========================================
# REQUIRED for movie/TV show data, posters, details, and genres
# Get your free API key at: https://www.themoviedb.org/settings/api
# 1. Create a free account at https://www.themoviedb.org/signup
# 2. Go to Settings > API > Request an API Key
# 3. Choose "Developer" option
# 4. Fill in the required information
# 5. Copy your API Key (v3 auth) here
TMDB_API_KEY=YOUR_TMDB_API_KEY_HERE

# ========================================
# Streaming Availability API - Watchmode
# ========================================
# OPTIONAL - Adds streaming platform availability for movies/shows
# Get your free API key at: https://api.watchmode.com/
# 1. Sign up for a free account at https://api.watchmode.com/
# 2. Go to your dashboard and copy your API key
# 3. Paste it below
# Free tier: 1,000 requests per day
WATCHMODE_API_KEY=YOUR_WATCHMODE_API_KEY_HERE

# ========================================
# Authentication Services
# ========================================

# Firebase Authentication (Option 1)
# Get credentials at: https://console.firebase.google.com/
# 1. Create a new project or use existing one
# 2. Go to Project Settings > Service Accounts
# 3. Generate new private key
# 4. Enable Authentication in your Firebase Console
FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
FIREBASE_AUTH_DOMAIN=YOUR_PROJECT_ID.firebaseapp.com
FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
FIREBASE_STORAGE_BUCKET=YOUR_PROJECT_ID.appspot.com
FIREBASE_MESSAGING_SENDER_ID=YOUR_SENDER_ID
FIREBASE_APP_ID=YOUR_APP_ID

# Auth0 Configuration (Option 2) - RECOMMENDED FOR PRODUCTION
# Get credentials at: https://auth0.com/
# 1. Sign up for Auth0 account at https://auth0.com/
# 2. Create a new application in Auth0 Dashboard
# 3. Choose "Single Page Web Applications"
# 4. Copy Domain, Client ID from application settings
# 5. Configure Callback URLs:
#    - Development: http://localhost:3000/callback.html
#    - Production: https://your-app-name.herokuapp.com/callback.html (use HTTPS!)
# 6. Configure Logout URLs:
#    - Development: http://localhost:3000/login.html
#    - Production: https://your-app-name.herokuapp.com/login.html (use HTTPS!)
# 7. Configure Allowed Web Origins:
#    - Development: http://localhost:3000
#    - Production: https://your-app-name.herokuapp.com (use HTTPS!)
# 8. Enable "Refresh Token Rotation" in application settings
# 9. Grant Management API access with scopes: read:users, update:users, update:current_user_metadata, read:connections, create:connections, update:connections
# IMPORTANT: Auth0 requires HTTPS in production. The app will auto-detect and use HTTPS when NODE_ENV=production
# See AUTH0_SETUP_GUIDE.md for detailed setup instructions
# See AUTH0_CUSTOM_SOCIAL_CONNECTIONS.md for custom social provider setup
AUTH0_DOMAIN=YOUR_AUTH0_DOMAIN.auth0.com
AUTH0_CLIENT_ID=YOUR_AUTH0_CLIENT_ID
AUTH0_CLIENT_SECRET=YOUR_AUTH0_CLIENT_SECRET
# Optional: Override auto-detected URLs (only if needed)
# The app automatically uses HTTPS in production, so you can omit these in most cases
# Development default: http://localhost:3000/callback.html
# Production default: https://your-app/callback.html (auto-detected)
AUTH0_CALLBACK_URL=http://localhost:3000/callback.html
AUTH0_LOGOUT_URL=http://localhost:3000/login.html
AUTH0_AUDIENCE=https://YOUR_AUTH0_DOMAIN.auth0.com/api/v2/

# ========================================
# Auth0 Custom Social Connections
# ========================================
# For custom OAuth2 providers not available in Auth0's marketplace
# These credentials are used to create custom social connections via Auth0's extensibility points
# The custom connection will fetch user profile data from provider's userinfo endpoint in JSON format
# See AUTH0_CUSTOM_SOCIAL_CONNECTIONS.md for complete implementation guide

# Custom Netflix OAuth Connection
# Note: Netflix public API is no longer available. These are for demonstration purposes.
# Replace with your actual provider's OAuth credentials
NETFLIX_CUSTOM_CLIENT_ID=YOUR_CUSTOM_NETFLIX_OAUTH_CLIENT_ID
NETFLIX_CUSTOM_CLIENT_SECRET=YOUR_CUSTOM_NETFLIX_OAUTH_CLIENT_SECRET

# Custom Hulu OAuth Connection
HULU_CUSTOM_CLIENT_ID=YOUR_CUSTOM_HULU_OAUTH_CLIENT_ID
HULU_CUSTOM_CLIENT_SECRET=YOUR_CUSTOM_HULU_OAUTH_CLIENT_SECRET

# Custom Disney+ OAuth Connection
DISNEY_CUSTOM_CLIENT_ID=YOUR_CUSTOM_DISNEY_OAUTH_CLIENT_ID
DISNEY_CUSTOM_CLIENT_SECRET=YOUR_CUSTOM_DISNEY_OAUTH_CLIENT_SECRET

# JWT Secret for Token Generation
# Generate a strong random string for production
# Example: openssl rand -base64 32
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_HERE_CHANGE_THIS_IN_PRODUCTION

# ========================================
# Chat & Messaging Services
# ========================================

# Twilio (Option 1 - SMS & Voice)
# Get credentials at: https://www.twilio.com/console
# 1. Create a Twilio account
# 2. Get your Account SID and Auth Token from Console
# 3. Get a Twilio phone number from Console > Phone Numbers
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER

# SendBird (Option 2 - In-App Chat)
# Get credentials at: https://dashboard.sendbird.com/
# 1. Sign up for SendBird account
# 2. Create a new application
# 3. Copy Application ID and API Token from Settings
SENDBIRD_APP_ID=YOUR_SENDBIRD_APP_ID
SENDBIRD_API_TOKEN=YOUR_SENDBIRD_API_TOKEN

# Stream Chat (Option 3 - Real-time Messaging)
# Get credentials at: https://getstream.io/
# 1. Sign up for Stream account
# 2. Create a new app
# 3. Copy App ID, API Key, and API Secret
STREAM_API_KEY=YOUR_STREAM_API_KEY
STREAM_API_SECRET=YOUR_STREAM_API_SECRET
STREAM_APP_ID=YOUR_STREAM_APP_ID

# ========================================
# Cloud Hosting & Storage
# ========================================

# AWS Configuration
# Get credentials at: https://console.aws.amazon.com/
# 1. Create AWS account
# 2. Go to IAM > Users > Create User
# 3. Attach policies: AmazonS3FullAccess (for file storage)
# 4. Create Access Keys
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-netflix-and-chill-bucket

# Google Cloud Platform
# Get credentials at: https://console.cloud.google.com/
# 1. Create new project
# 2. Enable Cloud Storage API
# 3. Create service account
# 4. Download JSON key file
GCP_PROJECT_ID=YOUR_GCP_PROJECT_ID
GCP_CLIENT_EMAIL=YOUR_SERVICE_ACCOUNT_EMAIL
GCP_PRIVATE_KEY=YOUR_PRIVATE_KEY
GCP_BUCKET=your-gcp-bucket-name

# ========================================
# Analytics & Monitoring
# ========================================

# Google Analytics
# Get tracking ID at: https://analytics.google.com/
# 1. Create Google Analytics account
# 2. Create a new property
# 3. Copy your Measurement ID (G-XXXXXXXXXX)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Mixpanel Analytics
# Get credentials at: https://mixpanel.com/
# 1. Sign up for Mixpanel account
# 2. Create a new project
# 3. Copy Project Token from Settings
MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN

# Sentry Error Tracking
# Get DSN at: https://sentry.io/
# 1. Create Sentry account
# 2. Create new project
# 3. Copy DSN from Settings
SENTRY_DSN=YOUR_SENTRY_DSN

# ========================================
# Email Services
# ========================================

# SendGrid (Email delivery)
# Get API key at: https://app.sendgrid.com/
# 1. Create SendGrid account
# 2. Go to Settings > API Keys
# 3. Create API Key with Full Access
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY
SENDGRID_FROM_EMAIL=noreply@yourapp.com

# Mailgun (Alternative)
# Get credentials at: https://www.mailgun.com/
MAILGUN_API_KEY=YOUR_MAILGUN_API_KEY
MAILGUN_DOMAIN=YOUR_MAILGUN_DOMAIN

# ========================================
# Payment Processing (Future Feature)
# ========================================

# Stripe
# Get keys at: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=YOUR_STRIPE_PUBLIC_KEY
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY

# ========================================
# Social Media Integration (Future Feature)
# ========================================

# Facebook
FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=YOUR_FACEBOOK_APP_SECRET

# Google
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# Apple
APPLE_CLIENT_ID=YOUR_APPLE_CLIENT_ID
APPLE_TEAM_ID=YOUR_APPLE_TEAM_ID
APPLE_KEY_ID=YOUR_APPLE_KEY_ID

# ========================================
# Development & Testing
# ========================================

# Enable debug mode (set to 'true' for development)
DEBUG=false

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

